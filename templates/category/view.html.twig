{% extends 'base.html.twig' %}

{% block body %}
<main class="category" role="main">
    <div class="container">
        <h1>{{ category.name }}</h1>
        <p>{{ category.description }}</p>
    </div>
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for post in posts %}
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="{{ post.image | imagePath }}" alt="">
                            <div class="card-body">
                                <p class="card-text">
                                    {{ post.description }}
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Read</button>
                                    </div>
                                    <small class="text-muted">{{ post.publicationDate }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</main>
{% endblock %}
